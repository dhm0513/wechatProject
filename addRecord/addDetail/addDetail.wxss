/* addRecord/addDetail/addDetail.wxss */

.out-box{
  height: 100vh;
  background-color: rgb(245, 244, 244);
}

/* 头部logo */
.header{
  height: 400rpx;
  position: relative;
}
.header .head-in{
  height: 200rpx;
  width: 200rpx;
  position: absolute;
  top:50%;
  left:50%;
  transform: translate(-50%,-50%);
}
.header view image{
  width: 100%;
  height: 100%;
  /* border:1px solid #ccc; */
  border-radius: 34rpx;
}
/* 中部分区 */
.middle{
  width: 70%;
  margin: 0 auto;
  overflow: hidden;
}
.middle .box-out{
  width: 50%;
  margin-bottom: 38rpx;
  float: left;
}
.middle .box{
  width: 200rpx;
  height: 200rpx;
  margin: 0 auto;
  background-color: #fff;
  border: 1px solid rgb(231, 224, 224);
  border-radius: 16rpx;
  position: relative;
}
.middle .box label{
  line-height: 200rpx;
  color:#999;
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
}

/* 上滑页面 */
.slide-up{
  width: 100%;
  height: 0;
  background-color: #fff;
  border-radius: 16rpx 16rpx 0 0;
  opacity: 0;
  position:fixed;
  bottom:0px;
  /* border: 1px solid #ccc; */
  /* padding-top: 80rpx; */
}
.slide-up .title-back{
  height: 80rpx;
   border-radius: 16rpx 16rpx 0 0;
   margin-bottom: 20rpx;
}
.slide-up.slide-up-show{
  opacity: 1;
  height: 700rpx;
  transition:all 1s;
  transition-timing-function:ease-out;
}
.slide-up .click-back{
  width: 60rpx;
  height: 60rpx;
  position: absolute;
  right:10rpx;
  top:10rpx;
}
.slide-up .click-back image{
  width: 100%;
  height: 100%;
}
.slide-up .image-box{
  width: 200rpx;
  height: 200rpx;
  padding: 10rpx;
  border: 1px solid #ccc;
  margin:20rpx 0 20rpx 30rpx;
  float: left;
}
.slide-up .image-box image{
  width: 100%;
  height: 100%;
}
.slide-up .upload-image-btn .upload-btn{
  width: 200rpx;
  height: 74rpx;
  color:#999;
  border: 1px solid #ccc;
  margin-left: 30rpx;
  font-size: 28rpx;
}