/**index.wxss**/

page {
  width: 100%;
  height: 100%;
}

/* banner部分 */

.banner {
  width: 100%;
  height: 400rpx;
}

.banner image {
  width: 100%;
  height: 100%;
}

/* 导航部分 */

.tab-list {
  width: 100%;
  padding: 20rpx;
  box-sizing: border-box;
}

.tab-list .nav-radius {
  width: 100%;
  border-radius: 20rpx;
  font-size: 22rpx;
}

.tab-list .nav-radius .flex {
  align-self: center;
  padding: 30rpx 0;
}

.tab-icon {
  font-size: 40rpx;
}

/*商品列表部分*/

.product {
  padding: 20rpx;
  box-sizing: border-box;
}

.product .title {
  margin-bottom: 20rpx;
}

.product .list {
  display: flex;
  justify-content: left;
  flex-wrap: wrap;
}

.product .list .list-item {
  width: 48%;
  margin-right: 2%;
  margin-bottom: 20rpx;
  /* height:100px; */
  border-radius: 16rpx;
  padding: 30rpx;
}

.product .list .list-item:nth-child(2n) {
  margin-left: 2%;
  margin-right: 0;
}

.product .image-box {
  height: 250rpx;
  box-sizing: border-box;
}

.product .image-box image {
  height: 100%;
}

.product .descript {
  margin: 10rpx 0;
  display: flex;
  justify-content: space-between;
}

.product .descript label {
  line-height: 40rpx;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  line-clamp: 2;
  -webkit-box-orient: vertical;
}

.product .descript text {
  padding: 4rpx 16rpx;
  background-color: #fac119;
  font-size: 22rpx;
  color: #fff;
  border-radius: 8rpx;
}

.product .price {
  display: flex;
  flex-direction: column;
  position: relative;
}

.product .price label {
  color: #000;
}

.product .price text {
  font-size: 22rpx;
  text-decoration: line-through;
}

.product .price .shoping-car {
  font-size: 44rpx;
  color: #ff2b3c;
  position: absolute;
  right: 16rpx;
  top: 16rpx;
}

/*登录页*/

.login-page {
  height: inherit;
  position: relative;
}

.login-page image {
  width: 100%;
  height: inherit;
}

.login-page .login-content {
  width: 60%;
  margin: 0 auto;
  position: absolute;
  left: 50%;
  top: 260rpx;
  transform: translateX(-50%);
  /* background-color: white */
  color: #999;
}

.login-page .login-form input {
  height: 70rpx;
  border: 1px solid #999;
  margin-bottom: 40rpx;
  line-height: 70rpx;
  padding-left: 30rpx;
  border-radius: 16rpx;
}

.login-page .remember-out {
  font-size: 24rpx;
}

.login-page .remember-out .remember {
  margin-left: 10rpx;
}

/*checkbox 选项框大小  */

.login-page .remember .wx-checkbox-input {
  width: 20rpx;
  height: 20rpx;
}

/*checkbox选中后样式  */

.login-pag .remember .wx-checkbox-input.wx-checkbox-input-checked {
  background: #0394f0;
  border-color: #0394f0;
}

/*checkbox选中后图标样式  */

.login-page .remember::before {
  content: "\e645";
  position: absolute;
  /* color: var(--white) !important; */
  top: 50%;
  margin-top: -8px;
  right: 0;
  font-size: 22rpx;
  line-height: 16px;
  pointer-events: none;
  transform: scale(1, 1);
  transition: all 0.3s ease-in-out 0s;
  z-index: 9;
}

.login-page .loginin {
  background-color: #ccc;
  margin-top: 60rpx;
  color: #678997;
}
