/* pages/addIndex/addIndex.wxss */
page{
  background-color: white;
}
/* 上方banner图 */
.list-top{
  height: 360rpx;
}

.list-top image{
  width: 100%;
  height: 100%;
}

/* 中部点击添加 */
.list-middle{
  height: 140rpx;
  margin-top: 20rpx;
}

/* .list-middle image{
  width: 100%;
  height: 100%;
} */
.list-middle .middle .title{
  line-height: 90rpx;
}

/* 列表展示部分 */
.list-content{
  display: flex;
  margin: 20rpx 20rpx;
}
.list-content .left{
  width: 100rpx;
  /* border: 2rpx solid #ddd; */
} 
.list-content .left text{
  display: inline-block;
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background-color: #ccc;
  text-align: center;
}
.list-content .left text::before{
  display: block;
  font-size: 50rpx;
  margin-top: 10rpx;
  color: #999;
}
.list-content .middle{
 flex: 1;
 /* border: 2rpx solid #ddd; */
}
.list-content .middle .title{
  color: #999;
}
.list-content .middle .remark{
  font-size: 22rpx;
  color: #bbb;
  line-height: 34rpx;
  overflow: hidden;    
  text-overflow: ellipsis;    
  display: -webkit-box;   
 -webkit-line-clamp: 2;   
 -webkit-box-orient: vertical;
}
.list-content .right{
   width: 100rpx;
   /* border: 2rpx solid #ddd; */
   text-align: right;
}
.list-content .right .price{
  font-size: 24rpx;
  color: #999;
  font-weight: bold;
}